<Window x:Class="TransmitServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransmitServer"
        mc:Ignorable="d"
        Title="转发服务器"
        Icon="/icon.ico">
    <Grid>
        <Grid.RowDefinitions>         
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#F0F0F0" Height="25">
            <StackPanel Orientation="Horizontal">   
                <TextBlock Height="16" FontSize="12" Text="本机Ip：" Margin="5,0,5,0"></TextBlock>
                <TextBlock Height="16" FontSize="12" Text="{Binding IPText}"></TextBlock>
                <!--<TextBlock Height="16" FontSize="12" Text="当前时间：" Margin="25,0,5,0"></TextBlock>
                <TextBlock Height="16" FontSize="12" Text="{Binding CurTime}"></TextBlock>-->
                <TextBlock Height="16" FontSize="12" Text="资源占用：" Margin="25,0,5,0"></TextBlock>
                <TextBlock Height="16" FontSize="12" Text="{Binding CurCpuAndMemory}"></TextBlock>
            </StackPanel>
        </Border>
        <DataGrid Grid.Row="1" ItemsSource="{Binding ClientListItems}" SelectedItem="{Binding ClientSelectedItem}" SelectedCellsChanged="DataGrid_SelectedCellsChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP" Binding="{Binding IP}" TextBlock.TextAlignment="Left" Width="160" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="端口" Binding="{Binding Port}" TextBlock.TextAlignment="Left" Width="80" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="连接时间" Binding="{Binding FirstConnectTime}" TextBlock.TextAlignment="Center" Width="200" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="发送计数" Binding="{Binding SendCount}" TextBlock.TextAlignment="Left" Width="100" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="发送字节数" Binding="{Binding SendLength}" TextBlock.TextAlignment="Left" Width="100" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="接收计数" Binding="{Binding RecCount}" TextBlock.TextAlignment="Left" Width="100" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="接收字节数" Binding="{Binding RecLength}" TextBlock.TextAlignment="Left" Width="100" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="类型" Binding="{Binding Type}" TextBlock.TextAlignment="Left" Width="100" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="描述" Binding="{Binding Desc}" TextBlock.TextAlignment="Left" Width="*" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <GridSplitter Grid.Row="2" Height="5"  Background="#F0F0F0"  HorizontalAlignment="Stretch" ShowsPreview="True"></GridSplitter>
        <DataGrid Grid.Row="3" ItemsSource="{Binding DetailListItems}"  >
            <DataGrid.ContextMenu> 
                    <ContextMenu>
                        <MenuItem Header="清空" Click="MenuItem_Click"></MenuItem>
                    </ContextMenu> 
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="时间" Binding="{Binding Time}" Width="auto" MinWidth="160" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="内容" Binding="{Binding Msg}" Width="*" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid> 
    </Grid>
</Window>
